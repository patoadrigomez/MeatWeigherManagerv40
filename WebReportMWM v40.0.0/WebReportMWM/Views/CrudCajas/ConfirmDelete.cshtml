@model WebReportMWM.Models.Entitys.Caja
@{
    ViewBag.Title = "ConfirmDelete";
}

<h2>Desasignar Producto Contenido</h2>
<hr />
<h3>Confirma Eliminar esta Asignación?</h3>

@using (Html.BeginForm("ConfirmDelete", "CrudCajas", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdProductoCaja)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" id="IdProductoCaja" name="IdProductoCaja" value="@Model.IdProductoCaja" />

    <div class="form-group">
        @Html.Label("Caja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NombreCaja, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Producto Contenido", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NombreProducto, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Borrar" class="btn btn-danger" />
            @Html.ActionLink("Listar", "List", "CrudCajas", new { @class = "btn btn-info" })
        </div>
    </div>
</div>

    if (TempData["MessagesError"] != null && ((List<string>)TempData["MessagesError"]).Count > 0)
    {
        foreach (string msg in (List<string>)TempData["MessagesError"])
        {
            <p style="color:red;">@msg</p>
        }
    }
}




